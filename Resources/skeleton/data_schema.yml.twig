schema:
    class: {{ class }}
    db_driver: orm
    glavweb_security: false
    properties:

    {%- for field, type in fields %}

        {{ field }}: # {{ type }}
    {%- endfor %}

    {%- for field, associationData in associations %}


        {{ field }}: # {{ associationData['class'] }}
            join: left
            properties:

            {%- for field, type in associationData['fields'] %}

                {{ field }}: # {{ type }}
            {%- endfor %}
    {%- endfor %}
